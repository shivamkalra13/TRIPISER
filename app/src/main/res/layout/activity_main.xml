<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.application.tripiser.MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="monospace"
        android:text="TRIPISER"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Trip manager and adviser"
        android:textSize="30sp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/tripDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="174dp"
        android:ems="10"
        android:hint="Enter the Date of Trip(DD/MM/YYYY)"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColorHint="?attr/colorBackgroundFloating"
        android:textSize="22sp" />

    <Button
        android:id="@+id/contbutton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tripDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:autoText="false"
        android:elevation="15dp"
        android:fadingEdge="horizontal|vertical"
        android:onClick="contclick"
        android:requiresFadingEdge="horizontal|vertical"
        android:text="Continue" />

</RelativeLayout>
