<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/togglebg"
    tools:context="com.example.application.tripiser.ToggleActivity">

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/b1"
        android:elevation="24dp"
        android:onClick="onpack"
        android:layout_marginTop="214dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/b2"
        android:onClick="ontour"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b1" />

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b2"
        android:layout_below="@+id/b2"
        android:layout_marginTop="12dp"
        android:background="@drawable/b3"
        android:onClick="onflight" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/b4"
        android:onClick="onhotel"
        android:layout_below="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:layout_marginTop="11dp" />
</RelativeLayout>
